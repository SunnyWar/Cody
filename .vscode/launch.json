{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Python Debugger: Driver Script",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/cody-agent/orchestrator.py",
            "console": "integratedTerminal"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'Cody'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=Cody",
                    "--package=Cody"
                ],
                "filter": {
                    "name": "Cody",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'Cody'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=Cody",
                    "--package=Cody"
                ],
                "filter": {
                    "name": "Cody",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}